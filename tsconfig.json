{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/components/*": ["./app/components/*"],
      "@/screens/*": ["./app/screens/*"],
      "@/api/*": ["./app/api/*"],
      "@/lib/*": ["./app/lib/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app-env.d.ts"
  ]
}
